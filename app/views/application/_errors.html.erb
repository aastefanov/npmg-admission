<% if flash[:error] %>
  <div class="alert alert-danger flash-error" role="alert">
    <%= t 'activerecord.errors.messages.record_invalid', errors: flash[:error] %>
  </div>
  <div style="clear: both;"></div>
<% end %>
<% if flash[:alert] %>
  <div class="alert alert-danger flash-alert" role="alert">
    <%= flash[:alert] %>
  </div>
  <div style="clear: both;"></div>
<% end %>
<% if flash[:notice] %>
  <div class="alert alert-info flash-notice" role="alert">
    <%= flash[:notice] %>
  </div>
  <div style="clear: both;"></div>
<% end %>
<% if flash[:success] %>
  <div class="alert alert-success flash-success" role="alert">
    <%= flash[:success] %>
  </div>
  <div style="clear: both;"></div>
<% end %>
<% flash.clear %>
