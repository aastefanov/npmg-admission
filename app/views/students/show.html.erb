<%#= javascript_include_tag Ckeditor.cdn_url %>


<div class="row">
  <div class="col-md-6">
    <div class="panel panel-primary">

      <div class="panel-heading">Покажи ученик</div>
      <div class="panel-body">
        <%= render 'shared/studentdata' %>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">История</div>
      <div class="panel-body">
        <%= render 'shared/studenthistory' %>
      </div>
    </div>
    <% if @student.comments.present? %>
      <div class="panel panel-default">
        <div class="panel-heading"><%= Student.human_attribute_name :comments %></div>
        <div class="panel-body">
          <%= render 'shared/comments' %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%#= render 'shared/commentsmodal' %>

