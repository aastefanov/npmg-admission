<div class="control-group<%= object.errors[field].length > 0 ? ' error' : '' %>">
  <%= f.label field, :class => "control-label" %>
  <div class="controls">
    <%= f.collection_select(field, from, :id, :name, :prompt => "Моля изберете") %>

    <%= object.errors[field].length > 0 ? '<span class="help-inline">'.html_safe + object.errors[field].join('; ') + '</span>'.html_safe : '' %>
    <p class="help-block">...</p>
  </div>
</div>