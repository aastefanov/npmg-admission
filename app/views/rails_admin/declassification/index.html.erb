<ul class='nav nav-tabs' style="display: block !important;">
  <li id="manual_button" class="icon show_member_link active"><a href="#manual_import" onclick="$('#manual_button').addClass('active'); $('#auto_button').removeClass('active'); $('#auto_import').hide(); $('#manual_import').show();"><i class="icon-pencil"></i> <span>Ръчно</span></a></li>
  <li id="auto_button" class="icon show_member_link"><a href="#auto_import" onclick="$('#auto_button').addClass('active'); $('#manual_button').removeClass('active'); $('#manual_import').hide(); $('#auto_import').show();"><i class="icon-book"></i> <span>Автоматично</span></a></li>
</ul>

<form id="manual_import" class="form-horizontal densier" method="get" action="<%= Rails.application.routes.url_helpers.rails_admin_edit_declass_path %>">
  <fieldset>
    <div class="control-group">
      <label class="control-label" for="exam_id">Изпит</label>
      <div class="controls">
        <select name="exam_id" class="string">
        <% @exams.each do |exam| %>
          <option value="<%= exam.id %>"<%= (params[:exam_id].to_i == exam.id) ? " selected" : "" %>><%= exam.name %></li>
        <% end %>
        </select>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="student_id">Входящ номер</label>
      <div class="controls">
        <input type="text" class="string" name="student_id" /> 
      </div>
    </div>
    <div class="form-actions">
      <%= submit_tag "Напред", :class => "btn btn-primary", :id => "save_btn" %>
    </div>
  </fieldset>
</form>

<%= form_for :import, :url => Rails.application.routes.url_helpers.rails_admin_import_declass_path, :method => :post, :html => {:multipart => true, :id => "auto_import", :style => "display: none;", :class => "form-horizontal densier"} do |f| %>
  <fieldset>
    <div class="control-group">
      <label class="control-label" for="csv">Файл</label>
      <div class="controls">
        <input type="file" class="string" name="csv" /> 
      </div>
    </div>
    <div class="form-actions">
      <%= submit_tag "Разсекретяване", :class => "btn btn-primary", :id => "save_btn" %>
    </div>
  </fieldset>
<% end %>
