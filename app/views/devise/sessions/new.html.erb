<div class="panel panel-primary">
  <div class="panel-heading">Вход</div>
  <div class="panel-body">
    <%= bootstrap_form_for(resource, as: resource_name, url: new_session_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      <%= f.password_field :password, autocomplete: "password" %>
      <%= f.submit 'Влез', class: 'btn btn-primary btn-block' %>
    <% end %>
    <%= link_to 'Забравена парола?', new_user_password_path %>
  </div>
</div>